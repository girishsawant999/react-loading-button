{
  "name": "@girishsawant999/react-loading-button",
  "version": "1.0.4",
  "description": "A react component for loading button with animation",
  "type": "module",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "targets": {
    "main": {
      "optimize": true
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "parcel",
    "build": "cross-env rm -rf dist && parcel build --no-source-maps",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "lint": "cross-env eslint './**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "cross-env eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json,html,scss,sass}' --config ./.prettierrc --ignore-path ./.gitignore",
    "setup": "npm install && husky install && cd demo && npm install",
    "setup:update": "ncu -u && cd demo && ncu -u && cd .. && npm run setup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/girishsawant999/react-loading-button.git"
  },
  "keywords": [
    "react",
    "package",
    "typescript",
    "module",
    "library",
    "react-loading-button",
    "react-loading-button-component",
    "react-loading-button-library",
    "girishsawant999"
  ],
  "author": "Girish Sawant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/girishsawant999/react-loading-button/issues"
  },
  "homepage": "https://girishsawant999.github.io/react-loading-button",
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-sass": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@size-limit/preset-app": "^7.0.5",
    "@size-limit/preset-big-lib": "^7.0.5",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "autoprefixer": "^10.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.5",
    "jest-environment-jsdom-global": "^3.0.0",
    "jest-localstorage-mock": "^2.4.18",
    "lint-staged": "^12.1.5",
    "npm-check-updates": "^12.1.0",
    "parcel": "^2.0.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.5",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,html,scss,sass}": [
      "prettier --write --config ./.prettierrc --ignore-path ./.gitignore"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/*",
      "limit": "500 ms",
      "webpack": false
    }
  ],
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not ie < 10"
  ]
}
